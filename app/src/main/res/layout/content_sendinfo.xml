<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hzy.lovenum.SendinfoActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/sendinfo">

    <TextView
        android:id="@+id/send_locationID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/left_detailstartbig"
        android:drawableRight="@drawable/arrow_right_blue"
        android:hint="发件人位置"
        android:singleLine="false"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/detail_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/leftdetailbig"
        android:hint="小区、单元、楼层、门牌号"
        android:singleLine="false" />


    <EditText
        android:id="@+id/name_send"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/left_detailnamebig"


        android:hint="发件人姓名"
        android:singleLine="false" />
    <EditText
        android:id="@+id/tel_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:drawableLeft="@drawable/leftdetailtelephonebig"
        android:hint="发件人电话"
        android:inputType="phone"
        android:singleLine="false" />

    <EditText
        android:id="@+id/remarks_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/lefmessageicon"
        android:hint="备注：物品 、重量、特别说明"
        android:singleLine="false" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"

        android:background="@android:color/holo_blue_bright"
        android:text="确定"
        android:textColor="@color/black" />


</LinearLayout>
