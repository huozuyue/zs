<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_lite"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hzy.lovenum.OrderDetail"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_order_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_bottom_bar"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.008"
                android:text="订单编号："
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/orderNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="100"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.03"
                android:text="待抢单"
                android:textColor="@color/blue"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/orderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/left_clockicon"
            android:singleLine="false"
            android:text="2018年3月22日 21:30:00"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/lefmessageicon"
            android:singleLine="false"
            android:text="备注"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/orderStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/left_detailstarticon"
            android:singleLine="false"
            android:text="世界名筑"
            android:textColor="@color/blue"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/send_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/leftdetailicon"
            android:singleLine="false"
            android:text="世界名筑5号楼2单元203室"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/send_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/left_detailnameicon"
            android:singleLine="false"
            android:text="张三丰发"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/send_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/leftdetailtelephoneicon"
            android:singleLine="false"
            android:text="189311222222"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/left_detailendicon"
            android:singleLine="false"
            android:text="铁路局"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/receivieaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/leftdetailicon"
            android:singleLine="false"
            android:text="世界名筑5号楼2单元203室"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/receive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/left_detailnameicon"
            android:singleLine="false"
            android:text="张三丰发"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/receive_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/leftdetailtelephoneicon"
            android:singleLine="false"
            android:text="189311222222"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/leftdistanceicon"
            android:singleLine="false"
            android:text="8.7KM"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/left_shijianicon"
            android:singleLine="false"
            android:text="1小时内送达"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/leftcosticon"
            android:singleLine="false"
            android:text="32"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/zhifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:text="去支付" />
    </LinearLayout>
</LinearLayout>
